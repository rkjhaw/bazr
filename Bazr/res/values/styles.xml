<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="MyTheme" parent="Theme.Sherlock.Light.DarkActionBar">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="homeAsUpIndicator">@drawable/ic_action_mobile_menu_icon</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_mobile_menu_icon</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.Sherlock.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_edtxt_corner_white</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">top|left</item>
        <item name="android:paddingBottom">@dimen/space_layout_padding</item>
        <item name="android:paddingLeft">@dimen/space_layout_padding</item>
        <item name="android:paddingRight">@dimen/space_layout_padding</item>
        <item name="android:paddingTop">@dimen/space_layout_padding</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:layout_marginTop">@dimen/verticalgapcontrols</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="text_view_header_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/space_layout_padding</item>
        <item name="android:paddingLeft">@dimen/space_layout_padding</item>
        <item name="android:paddingRight">@dimen/space_layout_padding</item>
        <item name="android:textSize">@dimen/lbl_heading_Size_topmenu</item>
        <item name="android:textColor">@color/blue</item>       
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_product_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/space_layout_padding_small</item>
        <item name="android:paddingLeft">@dimen/space_layout_padding_small</item>
        <item name="android:paddingRight">@dimen/space_layout_padding_small</item>
        <item name="android:textSize">@dimen/lbl_size_list_item</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="text_view_product_detail_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/space_layout_padding_small</item>
        <item name="android:paddingLeft">@dimen/space_layout_padding_small</item>
        <item name="android:paddingRight">@dimen/space_layout_padding_small</item>
        <item name="android:textSize">@dimen/lbl_size</item>      
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
     <style name="text_view_product_detail_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/space_layout_padding_small</item>
        <item name="android:paddingLeft">@dimen/space_layout_padding_small</item>
        <item name="android:paddingRight">@dimen/space_layout_padding_small</item>
        <item name="android:textSize">@dimen/lbl_size</item>      
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/grey</item>        
    </style>

    <style name="spinner_style_product_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/space_layout_padding</item>
        <item name="android:paddingLeft">@dimen/space_layout_padding</item>
        <item name="android:paddingRight">@dimen/space_layout_padding</item>
        <item name="android:paddingTop">@dimen/space_layout_padding</item>
        <item name="android:textSize">@dimen/lbl_size</item>        
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@color/light_blue</item>
    </style>
    
    <style name="spinner_style_product_upload">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@color/light_blue</item>
    </style>
    
    <style name="btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>        
        <item name="android:paddingBottom">@dimen/space_layout_padding</item>
        <item name="android:paddingLeft">@dimen/space_layout_padding</item>
        <item name="android:paddingRight">@dimen/space_layout_padding</item>
        <item name="android:paddingTop">@dimen/space_layout_padding</item>
        <item name="android:textSize">@dimen/txt_size_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/btn_normal</item>        
    </style>
     <style name="divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>           
        <item name="android:background">@color/blue</item>        
    </style>

</resources>