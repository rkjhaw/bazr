<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:padding="@dimen/space_layout_padding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/space_layout_margin"
            android:orientation="vertical"
            android:padding="@dimen/space_layout_padding" >

            <TextView
                android:id="@+id/textView1"
                style="@style/text_view_header_style"
                android:text="Login" />

            <EditText
                android:id="@+id/editText1"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/verticalgapcontrols"
                android:hint="Email Address/Contact No" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editText2"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/verticalgapcontrols"
                android:hint="Password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btn_login"
                style="@style/btn_style"
                android:layout_marginTop="@dimen/verticalgapcontrols"
                android:text="Login" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remember me"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/lbl_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:text="Sign Up"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/lbl_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp" >

                <Button
                    android:id="@+id/btn_fblogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/fblogin" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>