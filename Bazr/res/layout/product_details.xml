<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <android.support.v4.view.ViewPager
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/product_detail_image_size"
                    android:background="@color/blue" />

                <TextView
                    android:id="@+id/textview_product_detail_name"
                    style="@style/text_view_product_detail_header" />

                <TextView
                    android:id="@+id/textview_product_detail_postedon"
                    style="@style/text_view_product_detail_item" />

                <TextView
                    android:id="@+id/textview_product_detail_price"
                    style="@style/text_view_product_detail_item" />

                <TextView
                    android:id="@+id/textview_product_detail_distance"
                    style="@style/text_view_product_detail_item" />

                <TextView
                    android:id="@+id/textview_product_detail_email"
                    style="@style/text_view_product_detail_item" />

                <TextView
                    android:id="@+id/textview_product_detail_mobileno"
                    style="@style/text_view_product_detail_item" />
                
                <TextView
                    android:text="@string/lbl_description"
                    style="@style/text_view_product_detail_item"
                    android:layout_marginTop="@dimen/verticalgapcontrols"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textview_product_detail_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="200"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:textSize="@dimen/lbl_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:padding="@dimen/space_layout_padding" >

                <ImageView
                    android:id="@+id/imageview_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/verticalgapcontrols"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/sharethis" />

                <ImageView
                    android:id="@+id/imageview_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/verticalgapcontrols"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/call" />

                <ImageView
                    android:id="@+id/imageview_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/verticalgapcontrols"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/mail" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>