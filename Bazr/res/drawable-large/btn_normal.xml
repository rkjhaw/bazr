<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" ><shape>
            <gradient android:angle="270"  android:endColor="#704c4cff" android:startColor="#704c4cff" android:type="linear" />

            <stroke android:width="0dp" android:color="@color/black" />

            <corners android:radius="5dp" />           
            

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/blue" android:startColor="@color/blue" android:type="linear" />

            <stroke android:width="0dp" android:color="@color/black" />

            <corners android:radius="5dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>

</selector>